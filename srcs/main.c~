int			main(int ac, char **av)
{
	int		player;
	char	**grid;

	if (ac == 3)
	{
		grid = create_grid(av[1], av[2]);
		//Nb de joueurs ?
		if (player == 1)
			ia();
		else if (player == 2)
			two_player();
	}
	else
		write(1, "Usage : ./puissance_4 [0-9] [0-9]\n", 34);
	return (0);
}
